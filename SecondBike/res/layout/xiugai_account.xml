<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#aec7e1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_4"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel"
                android:layout_width="65.83dp"
                android:layout_height="30.5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn"
                android:text="@string/back"
                android:textColor="#ffff" />

            <TextView
                android:id="@+id/tv_friend_title"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="修改账号"
                android:textColor="#ffffff"
                android:textSize="20dip" />

            <Button
                android:id="@+id/yes"
                android:layout_width="65.83dp"
                android:layout_height="30.5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn"
                android:text="完成"
                android:textColor="#ffff" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d5d5d8"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#ffffff"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/namelabel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            android:singleLine="true"
                            android:text="昵称"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/nicheng"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="#ffffff"
                            android:ems="14"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="昵称"
                            android:textColor="#969696"
                            android:textSize="15sp" />
                        <requestFocus />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/unamelabel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            android:singleLine="true"
                            android:text="用户名"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/uname"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="#ffffff"
                            android:ems="14"
                            android:gravity="right"
                            android:inputType="text"
                            android:singleLine="true"
                            android:text="用户名"
                            android:textColor="#969696"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/genderlabel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:singleLine="true"
                            android:text="性别"
                            android:textSize="18sp" />

                        <Spinner
                            android:id="@+id/gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:entries="@array/gender"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/QQlabel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:singleLine="true"
                            android:text="QQ"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/QQ"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="#ffffff"
                            android:ems="14"
                            android:gravity="right"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColor="#969696"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/linklabel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            android:singleLine="true"
                            android:text="联系电话"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            android:ems="14"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:inputType="number|phone"
                            android:singleLine="true"
                            android:textColor="#969696"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#ffffff"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:background="#d5d5d8" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/addresslabel"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#ffffff"
                                android:singleLine="true"
                                android:text="地区"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="#ffffff"
                                android:ems="14"
                                android:gravity="right"
                                android:singleLine="true"
                                android:text="陕西"
                                android:textColor="#969696"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/motolabel"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#ffffff"
                                android:singleLine="true"
                                android:text="个性签名"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/moto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:background="#ffffff"
                                android:ems="14"
                                android:maxLines="3"
                                android:textColor="#969696"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>